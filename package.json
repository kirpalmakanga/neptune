{
    "name": "neptune",
    "version": "1.0.0",
    "description": "Electron music player",
    "main": "electron/main.ts",
    "scripts": {
        "dev": "IS_DEV=true vite",
        "build": "vite build",
        "serve": "vite preview",
        "electron": "wait-on tcp:8080 && cross-env IS_DEV=true electron .",
        "electron:pack": "electron-builder --dir",
        "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"npm run electron\"",
        "electron:builder": "rm -rf dist_electron && electron-builder",
        "build:for:electron": "cross-env ELECTRON=true vite build",
        "app:build": "npm run build:for:electron && npm run electron:builder"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "build": {
        "appId": "com.mk-dev.${name}",
        "productName": "Neptune",
        "copyright": "Copyright Â© 2022 ${author}",
        "mac": {
            "category": "public.app-category.utilities"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "files": [
            "dist/**/*",
            "electron/**/*"
        ],
        "directories": {
            "buildResources": "assets",
            "output": "dist_electron"
        }
    },
    "devDependencies": {
        "concurrently": "^7.3.0",
        "cross-env": "^7.0.3",
        "electron": "^20.0.1",
        "electron-builder": "^23.3.3",
        "sass": "^1.54.0",
        "vite": "^3.0.3",
        "vite-plugin-solid": "^2.3.0",
        "vite-plugin-windicss": "^1.8.7",
        "wait-on": "^6.0.1",
        "windicss": "^3.5.6"
    },
    "dependencies": {
        "@solid-primitives/audio": "^1.3.0",
        "@solid-primitives/fullscreen": "^1.1.0",
        "@solid-primitives/intersection-observer": "^1.4.0",
        "@solid-primitives/keyboard": "^1.0.0",
        "@solid-primitives/mutation-observer": "^1.1.0",
        "@solid-primitives/storage": "^1.3.1",
        "@solidjs/meta": "^0.28.0",
        "@solidjs/router": "^0.4.2",
        "@thisbeyond/solid-dnd": "^0.6.1",
        "date-fns": "^2.29.1",
        "mime-types": "^2.1.35",
        "music-metadata": "^7.12.5",
        "solid-js": "^1.4.8",
        "solid-transition-group": "^0.0.10",
        "uuid": "^8.3.2",
        "wavesurfer.js": "^6.2.0"
    }
}
